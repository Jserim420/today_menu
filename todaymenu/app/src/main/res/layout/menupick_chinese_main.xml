<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon" />

    <Button
        android:id="@+id/rice_btn"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="밥"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@+id/progbar_pb6"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/noodle_btn"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="면"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@+id/rice_btn"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/beef_btn"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="고기"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@+id/noodle_btn"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/soup_btn"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="국/탕"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@+id/seafood_btn"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/fry_btn"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="볶음"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@+id/soup_btn"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/seafood_btn"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="해산물"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@+id/beef_btn"
        tools:layout_editor_absoluteX="40dp" />

    <ProgressBar
        android:id="@+id/progbar_pb6"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="312dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:max="3"
        android:progress="2"
        android:scrollbarSize="4dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:layout_editor_absoluteX="49dp" />
</androidx.constraintlayout.widget.ConstraintLayout>